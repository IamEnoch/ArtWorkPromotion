@using web.Infrastructure
@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Fixed="false" Color="Color.Transparent" Elevation="0">
        <MudText Typo="Typo.h6" GutterBottom="true">ArtWork</MudText>
        <MudSpacer />
        <MudLink class="link" Href="/painting">Paintings</MudLink>
        <MudLink class="link" Href="/drawings">Drawing</MudLink>
        <MudLink class="link" Href="/sculpture">Sculpture</MudLink>

    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme? _currentTheme;
    private string url = string.Empty;
    protected override async Task OnInitializedAsync()
    {
        _currentTheme = Theme.DefaultTheme;
        _currentTheme = await _clientPreferenceManager.GetCurrentThemeAsync();
    }

   

}